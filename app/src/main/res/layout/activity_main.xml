<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/open_background_picture"
    android:orientation="horizontal"

    >
    <!-- XML file that applies the style to the TextView (saved in res/layout) -->
    <TextView
        android:id="@+id/textView"
        style="@style/title"
        android:layout_width="333dp"
        android:layout_height="128dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="2dp"
        android:width="359.5dp"
        android:height="118dp"
        android:text="@string/safepass"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="288dp"
        android:background="@drawable/safe_box_picture"
        android:contentDescription="@string/safe_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</android.support.constraint.ConstraintLayout>