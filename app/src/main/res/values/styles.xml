<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- XML file for the style (saved in res/values/) -->
    <style name="title">
        <item name="android:fontFamily">@font/iceberg</item>
        <item name="android:textColor">#FFB8977E</item>
        <item name="android:textSize">100sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="sub_title">
        <item name="android:fontFamily">@font/knewave</item>
        <item name="android:textColor">#FFB8977E</item>
        <item name="android:textSize">39.5sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>

    <style name="EnterPassword">
        <item name="android:fontFamily">@font/chewy</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">45sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="AppTheme.CustomTheme" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>



</resources>
